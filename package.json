    },
    "jest": {
        "preset": "react-native"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,scss,json,js}": ["npm run prettier", "git add"],
        "*.{ts,tsx}": ["npm run lint", "git add"]
    }
}
