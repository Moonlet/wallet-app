{
    "name": "moonlet",
    "version": "1.1.0",
    "private": true,
    "scripts": {
        "generate-icons": "mkdir -p resources/fonts && icon-font-generator ./src/assets/icons/svg/*.svg -o resources/fonts --height 1024 --types ttf",
        "emulator": "cd ~/Library/Android/sdk/tools/; emulator -avd `emulator -list-avds | awk '{print $1}'`",
        "android": "npm run generate-icons && react-native run-android --variant=betaDebug --appIdSuffix=beta",
        "ios": "npm run ios:before-run && react-native run-ios",
        "ios:pod-install": "cd ios && pod install",
        "ios:before-run": "npm run generate-icons & npm run ios:pod-install",
        "ext": "TARGET=beta BROWSER=chrome NODE_ENV=development webpack --mode development --config ./extension/webpack.config.babel.js --watch --info-verbosity verbose",
        "ext:build": "webpack -p --config ./extension/webpack.config.babel.js",
        "ext:build:beta:chrome": "TARGET=beta BROWSER=chrome npm run ext:build",
        "ext:build:beta:firefox": "TARGET=beta BROWSER=firefox npm run ext:build",
        "start": "(tsc -w --noEmit & react-native start)",
        "test": "jest",
        "lint": "tslint --fix '{src,extension}/**/*.{ts,tsx}'",
        "prettier": "prettier --write \"**/*.{js,ts,tsx,scss,json}\" --ignore-path .gitignore",
        "postinstall": "jetify"
    },
    "dependencies": {
        "@react-native-community/async-storage": "^1.6.2",
        "@sentry/browser": "^5.7.1",
        "@sentry/react-native": "^1.0.9",
        "@types/react-native-vector-icons": "^6.4.4",
        "@zilliqa-js/account": "^0.8.4",
        "@zilliqa-js/crypto": "^0.8.1-alpha.0",
        "@zilliqa-js/util": "^0.8.3",
        "bignumber.js": "^9.0.0",
        "bind-decorator": "^1.0.11",
        "bip39": "^3.0.2",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "ethereumjs-tx": "^2.1.1",
        "ethereumjs-util": "^6.1.0",
        "hdkey": "^1.1.1",
        "hoist-non-react-statics": "^3.3.0",
        "immutable": "^3.8.2",
        "intl": "^1.2.5",
        "lottie-react-native": "^3.3.2",
        "node-libs-react-native": "^1.0.3",
        "react": "16.9.0",
        "react-native": "0.61.1",
        "react-native-aes-crypto": "^1.3.6",
        "react-native-android-open-settings": "^1.3.0",
        "react-native-camera-kit": "^8.0.2",
