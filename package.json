{
    "name": "moonlet",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "generate-icons": "mkdir -p resources/fonts && icon-font-generator ./src/assets/icons/svg/*.svg -o resources/fonts --height 1024 --types ttf",
        "emulator": "cd ~/Library/Android/sdk/tools/; emulator -avd `emulator -list-avds | awk '{print $1}'`",
        "android": "npm run generate-icons && react-native run-android --variant=betaDebug --appIdSuffix=beta",
        "ios": "npm run generate-icons && react-native run-ios",
        "ext": "NODE_ENV=development webpack --mode development --config ./extension/webpack.config.js --watch",
        "ext:build": "webpack -p --config ./extension/webpack.config.babel.js",
        "ext:build:beta:chrome": "TARGET=beta BROWSER=chrome npm run ext:build",
        "ext:build:beta:firefox": "TARGET=beta BROWSER=firefox npm run ext:build",
        "start": "(tsc -w --noEmit & react-native start)",
        "test": "jest",
        "lint": "tslint --fix '{src,extension}/**/*.{ts,tsx}'",
        "prettier": "prettier --write \"**/*.{js,ts,tsx,scss,json}\" --ignore-path .gitignore"
    },
    "dependencies": {
        "@types/react-native-vector-icons": "^6.4.4",
        "@zilliqa-js/crypto": "^0.8.1-alpha.0",
        "bip39": "^3.0.2",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "ethereumjs-util": "^6.1.0",
        "hdkey": "^1.1.1",
        "intl": "^1.2.5",
        "node-libs-react-native": "^1.0.3",
        "react": "16.9.0",
        "react-native": "0.61.1",
        "react-native-device-info": "^4.0.1",
        "react-native-gesture-handler": "^1.4.1",
        "react-native-linear-gradient": "^2.5.6",
        "react-native-reanimated": "git+https://github.com/kmagiera/react-native-reanimated",
        "react-native-screens": "^2.0.0-alpha.3",
        "react-native-vector-icons": "^6.6.0",
        "react-native-web": "^0.11.7",
        "react-native-web-linear-gradient": "^1.0.5",
        "react-navigation": "^4.0.10",
        "react-navigation-stack": "^1.9.3",
        "react-navigation-tabs": "^2.5.5",
        "react-redux": "^7.1.1",
        "react-test-renderer": "^16.9.0",
        "redux": "^4.0.4",
        "redux-thunk": "^2.3.0",
        "typescript": "^3.6.3",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "@babel/core": "^7.6.2",
        "@babel/plugin-proposal-decorators": "^7.6.0",
        "@babel/runtime": "^7.6.2",
        "@react-native-community/eslint-config": "^0.0.5",
        "@types/enzyme": "^3.10.3",
        "@types/hdkey": "^0.7.1",
        "@types/jest": "^24.0.19",
        "@types/react": "^16.9.5",
        "@types/react-native": "^0.60.17",
        "@types/react-redux": "^7.1.4",
        "@types/react-test-renderer": "^16.9.0",
        "@types/redux": "^3.6.0",
        "@types/uuid": "^3.4.5",
        "babel-eslint": "^10.0.3",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.0.6",
        "babel-plugin-react-native-web": "^0.11.7",
        "babel-preset-react-native": "^4.0.1",
        "copy-webpack-plugin": "^5.0.4",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^3.0.8",
        "icon-font-generator": "^2.1.10",
        "jest": "^24.9.0",
        "lint-staged": "^9.4.1",
        "metro-react-native-babel-preset": "^0.56.0",
        "react-dom": "^16.10.2",
        "react-scripts": "^3.2.0",
        "ts-loader": "^6.2.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-microsoft-contrib": "^6.2.0",
        "tslint-react-native": "0.0.7",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.9",
        "webpack-dev-server": "^3.8.2",
        "webpack-extension-manifest-plugin": "^0.5.0",
        "write-file-webpack-plugin": "^4.5.1"
    },
    "jest": {
        "preset": "react-native"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,scss,json,js}": ["npm run prettier", "git add"],
        "*.{ts,tsx}": ["npm run lint", "git add"]
    }
}
